{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@app/shared": ["src/shared/index.ts"]
    },
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "noEmitOnError": true
  }
}
